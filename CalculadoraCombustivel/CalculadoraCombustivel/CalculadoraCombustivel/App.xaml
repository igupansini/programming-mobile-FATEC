<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculadoraCombustivel.App">
    
    <Application.Resources>
        
        <!-- Label - Titulo -->
        <Style x:Key="EstiloTituloLabel" TargetType="Label" >
            <Setter Property="TextColor" Value="#070000" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontAttributes" Value="Bold" />
        </Style>

        <!-- Label - Entrada -->
        <Style x:Key="EstiloDescricaoLabel" TargetType="Label" >
            <Setter Property="FontSize" Value="12" />
            <Setter Property="TextColor" Value="#070000"/>
        </Style>

        <!-- Entry - Numero -->
        <Style x:Key="EstiloEntry" TargetType="Entry" >
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Keyboard" Value="Numeric" />
            <Setter Property="TextColor" Value="#070000"/>
        </Style>

        <!-- Button -->
        <Style x:Key="EstiloButton" TargetType="Button" >
            <Setter Property="TextColor" Value="White" />
            <Setter Property="BackgroundColor" Value="#f44242" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="BorderRadius" Value="25" />
        </Style>

    </Application.Resources>

</Application>